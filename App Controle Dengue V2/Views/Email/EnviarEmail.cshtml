@using (Html.BeginForm("MandarEmail", "Email", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{


    <br>
    <fieldset>
        <legend>Mandar Email</legend>

        <div id="NomeUsuario" class="form-group">
            @Html.Label("Nome", "Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtNome", "", new { @class = "form-control" })
            </div>
        </div>


        <div id="Senha" class="form-group">
            @Html.Label("Email", "Email", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.Password("txtEmail", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit" value="Cadastrar" />
            </div>
        </div>
    </fieldset>


}

