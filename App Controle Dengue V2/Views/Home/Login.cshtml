
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))

{
    
    <br />

    <fieldset>
        <legend>Login</legend>

        <div id="NomeUsuario" class="form-group">
            @Html.Label("Nome de Usuario", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtNomeUsuario", "", new { @class = "form-control" })
            </div>
        </div>


        <div id="Senha" class="form-group">
            @Html.Label("Senha", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.Password("txtSenha", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit"
                       value="Login" />
            </div>
        </div>

        <br />
        @Html.ActionLink("Cadastrar Usuario", "CadastrarUsuario", "Usuario", null, new { @class = "navbar-brand" })
        <br />

    </fieldset>
}